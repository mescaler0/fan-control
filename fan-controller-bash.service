[Unit]
Description=Automatic Fan Controller based on Temperature (Bash)
After=multi-user.target
Wants=lm_sensors.service

[Service]
Type=simple
ExecStart=/usr/local/bin/temp_fan_controller.sh
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security hardening
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
